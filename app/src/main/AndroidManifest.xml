<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- https://github.com/material-components/material-components-android/blob/master/docs/foundations/PredictiveBack.md-->
    <application
        android:name=".ScheduleApp"
        android:allowBackup="true"
        android:enableOnBackInvokedCallback="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/pjpl_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pjpl_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PJATKPAMOSchedule" >
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>